const journeyItems = [
 {
   title: "IT Centrum UII, Yogyakarta",
   role: "Laboratory Assistant",
   period: "Okt 2024 - Present",
   description: "A programming logic expert who guides and mentors students in developing strong programming foundations. Responsible for conducting lab sessions, creating teaching materials, and evaluating student performance in programming concepts and problem-solving techniques.",
   dotColor: "bg-teal"
 },
 {
   title: "Academic Staff, GDGoC UII",
   role: "Staff",
   period: "Nov 2024 - Present",
   description: "Supporting students in mastering informatics fundamentals through comprehensive guidance and mentoring. Creating and reviewing course materials, facilitating discussion sessions, and helping students understand complex programming concepts and theories.",
   dotColor: "bg-salmon"
 },
 {
   title: "UII Excellence Scholarship",
   role: "Scholar",
   period: "Okt 2024 - Present",
   description: "Selected as an outstanding student for the UII Excellence Scholarship Program, maintaining a 3.94/4.00 GPA while actively participating in academic and leadership development programs. Engaging in research projects and competitive programming challenges.",
   dotColor: "bg-gold"
 },
 {
   title: "Preliminary Data Science Competition",
   role: "Team Leader",
   period: "Okt 2024 - Present",
   description: "Led the development of 'CrimeInsight Prediction' project, implementing machine learning solutions for urban safety analysis. Successfully integrated predictive modeling with interactive data visualization for crime trend analysis in DKI Jakarta.",
