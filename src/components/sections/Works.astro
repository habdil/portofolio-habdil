---
const works = [
 {
   title: "Mobile App Design",
   subtitle: "EduNovel",
   image: "/assets/images/food-app.png",
   bgColor: "bg-gold/20",
 },
 {
   title: "Desktop App Design",
   subtitle: "Agency Website",
   image: "/assets/images/agency-web.png", 
   bgColor: "bg-teal/20",
 },
 {
   title: "Brand Identity",
   subtitle: "Brand Guidelines",
   image: "/assets/images/brand-identity.png",
   bgColor: "bg-blue-light/20",
 }
];
---

<section class="py-20" id="works">
 <div class="container mx-auto px-6">
   <div class="flex justify-between items-center mb-12">
     <div>
       <h2 class="text-3xl md:text-4xl font-bold text-blue-dark mb-4">
         My Latest Works
       </h2>
       <p class="text-blue-medium/80 text-lg">
         Perfect Solution with Digital Experience
       </p>
     </div>
     
     <a 
       href="/works" 
       class="text-salmon hover:text-salmon/80 transition-colors font-medium hidden md:block"
     >
       Explore More Works
     </a>
   </div>

   <!-- Works Grid -->
   <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
     {works.map((work, index) => (
       <div 
         class="group relative overflow-hidden rounded-3xl cursor-pointer"
         data-aos="fade-up"
         data-aos-delay={index * 100}
       >
         <!-- Card Background -->
         <div class={`${work.bgColor} absolute inset-0 transition-transform duration-300 group-hover:scale-95`}></div>
         
         <!-- Card Content -->
         <div class="relative p-6 h-[400px] flex flex-col">
           <div class="mb-4">
             <h3 class="text-2xl font-semibold text-blue-dark mb-1">
               {work.title}
             </h3>
             <p class="text-blue-medium">
               {work.subtitle}
             </p>
           </div>
           
           <!-- Image Container -->
           <div class="flex-1 relative mt-4">
             <img 
               src={work.image}
               alt={work.title}
               class="absolute inset-0 w-full h-full object-cover transform transition-transform duration-300 group-hover:scale-105"
             />
           </div>
         </div>
       </div>
     ))}
   </div>

   <!-- Mobile Explore More Button -->
   <div class="mt-8 text-center md:hidden">
     <a 
       href="/works" 
       class="text-salmon hover:text-salmon/80 transition-colors font-medium"
     >
       Explore More Works
     </a>
   </div>
 </div>
</section>

<style>
 /* Optional: Add custom hover effects */
 .work-card:hover img {
   transform: scale(1.05);
 }
</style>