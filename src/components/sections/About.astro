---
// Import profile image
const profileImg = '/assets/images/profile-1.png';

// Skills data
const skills = {
  languages: ["Python", "Java", "JavaScript", "TypeScript", "Dart", "SQL", "PHP", "Astro"],
  frameworks: ["Next.js", "Laravel", "Flask", "Flutter", "Astro", "ViteJS"],
  tools: ["Git", "Docker", "Visual Studio", "Supabase", "Vercel", "MongoDB", "PostgreSQL", "Postman", "Notion"],
  libraries: ["Tailwind", "Bootstrap", "Shadcn UI", "Pandas", "NumPy", "Scikit-learn"]
};

// Certifications
const certifications = [
  "Introduction to Cybersecurity (Cisco)",
  "Introduction to Information Security (Cyber Academy Indonesia)",
  "Artificial Intelligence Fundamentals (Dicoding)",
  "Data Science Fundamentals (Dicoding)",
  "Java Programming Fundamentals (Dicoding)",
  "Web Programming Fundamentals (Dicoding)",
  "JavaScript Programming Fundamentals (Dicoding)"
];

// Contact info
const contact = {
  whatsapp: "6285975360990",
  email: "habdiliqrawardana@gmail.com",
  linkedin: "linkedin.com/in/habdil-iqrawardana",
  github: "github.com/habdil"
};
---

<section class="py-20 bg-gray-50" id="about">
    <!-- Header Title -->
    <div class="container mx-auto px-6 mb-16">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-blue-dark mb-4">
          About Me
        </h1>
        <p class="text-blue-medium/80 text-lg max-w-2xl mx-auto">
          A passionate Informatics student specializing in web development and AI/ML Engineer
        </p>
      </div>
    </div>
  
    <!-- Main Content with Side-by-Side Layout -->
    <div class="container mx-auto px-6">
      <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-16 items-start"> <!-- Changed items-center to items-start -->
          <!-- Left Column - Image & Contact -->
          <div data-aos="fade-right">
            <div class="sticky top-24"> <!-- Added sticky positioning -->
              <div class="relative">
                <!-- Profile Image with Overlays -->
                <div class="relative z-10">
                  <img 
                    src={profileImg}
                    alt="Habdil Iqrawardana"
                    class="w-full max-w-md mx-auto rounded-3xl shadow-2xl"
                  />
                  <!-- Decorative Overlays -->
                  <div class="absolute -right-6 -bottom-6 w-full h-full bg-gradient-to-br from-teal/20 to-blue-dark/20 rounded-3xl -z-0"></div>
                  <div class="absolute -left-6 -top-6 w-full h-full bg-gradient-to-tl from-blue-dark/20 to-teal/20 rounded-3xl -z-0"></div>
                </div>
              </div>
  
              <!-- Contact Links -->
              <div class="mt-8 flex flex-wrap justify-center gap-6">
                <!-- WhatsApp Button -->
                <a 
                  href={`https://wa.me/${contact.whatsapp}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center gap-3 px-6 py-3 bg-gradient-to-r from-green-500 to-green-600 text-white rounded-xl hover:scale-105 transition-transform duration-300 shadow-lg"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.373 0 0 5.373 0 12c0 2.706.884 5.197 2.384 7.213L.822 23.95l4.737-1.562C7.676 23.39 9.76 24 12 24c6.627 0 12-5.373 12-12S18.627 0 12 0zm0 22c-2.04 0-3.937-.617-5.508-1.672l-3.824 1.26 1.26-3.824C2.617 15.937 2 14.04 2 12 2 6.477 6.477 2 12 2s10 4.477 10 10-4.477 10-10 10zm5.5-14c-.276 0-.5.224-.5.5v3c0 .276.224.5.5.5s.5-.224.5-.5v-3c0-.276-.224-.5-.5-.5zM8.5 8c-.276 0-.5.224-.5.5v3c0 .276.224.5.5.5s.5-.224.5-.5v-3c0-.276-.224-.5-.5-.5z"/>
                  </svg>
                  Chat on WhatsApp
                </a>
  
                <!-- Social Media Icons -->
                <div class="flex gap-4">
                <a 
                    href={`mailto:${contact.email}`}
                    class="p-3 bg-white text-blue-dark rounded-xl hover:scale-110 transition-transform duration-300 shadow-md"
                    title="Email"
                  >
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </a>
                  <a 
                  href={`https://${contact.linkedin}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="p-3 bg-white text-blue-dark rounded-xl hover:scale-110 transition-transform duration-300 shadow-md"
                  title="LinkedIn"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
                <a 
                href={`https://${contact.github}`}
                target="_blank"
                rel="noopener noreferrer"
                class="p-3 bg-white text-blue-dark rounded-xl hover:scale-110 transition-transform duration-300 shadow-md"
                title="GitHub"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
                </div>
              </div>
            </div>
          </div>
  
          <!-- Right Column - Content -->
          <div class="space-y-12" data-aos="fade-left">
            <!-- About Text -->
            <div class="prose prose-lg max-w-none">
              <p class="text-lg text-blue-medium/90 leading-relaxed">
                I specialize in web-based information system development and AI/ML Engineer. Through both academic assignments and competitions, I have developed several projects focusing on technological innovation and social impact.
              </p>
            </div>
  
            <!-- Skills -->
            <div>
              <h2 class="text-2xl font-bold text-blue-dark mb-6">Technical Skills</h2>
              <div class="space-y-8">
                {Object.entries(skills).map(([category, items]) => (
                  <div>
                    <h3 class="text-lg font-semibold text-teal mb-4 capitalize">{category}</h3>
                    <div class="flex flex-wrap gap-3">
                      {items.map(skill => (
                        <span class="px-4 py-2 bg-white rounded-xl text-blue-medium/80 shadow-sm hover:shadow-md hover:scale-105 transition-all duration-300">
                          {skill}
                        </span>
                      ))}
                    </div>
                  </div>
                ))}
              </div>
            </div>
  
            <!-- Certifications -->
            <div>
              <h2 class="text-2xl font-bold text-blue-dark mb-6">Certifications</h2>
              <div class="grid gap-4">
                {certifications.map(cert => (
                  <div class="flex items-center gap-3 group">
                    <div class="w-2 h-2 rounded-full bg-teal group-hover:scale-150 transition-transform"></div>
                    <p class="text-blue-medium/80">{cert}</p>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>