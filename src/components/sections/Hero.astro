---
const profileImgUrl = '/assets/images/profile.png';
const jsIconUrl = '/assets/icons/javascript.svg';
const pythonIconUrl = '/assets/icons/python.svg';
const uiuxIconUrl = '/assets/icons/uiux.svg';
const javaIconUrl = '/assets/icons/java.svg';
const securityIconUrl = '/assets/icons/security.svg';
const students = '/assets/icons/students.svg';

const techIcons = [
  { src: jsIconUrl, alt: "JavaScript", class: "top-[10%] right-[20%] sm:top-20 sm:right-[20%] animate-float-1" },
  { src: pythonIconUrl, alt: "Python", class: "top-[20%] right-[10%] sm:top-40 sm:right-[10%] animate-float-2" },
  { src: uiuxIconUrl, alt: "UI/UX", class: "top-[5%] right-[40%] sm:top-10 sm:right-[40%] animate-float-3" },
  { src: javaIconUrl, alt: "Java", class: "top-[10%] right-[80%] sm:top-20 sm:right-[80%] animate-float-4" },
  { src: securityIconUrl, alt: "Security", class: "top-[30%] right-[80%] sm:top-60 sm:right-[80%] animate-float-5" },
];
---

<section class="flex min-h-screen h-screen flex-col justify-center overflow-hidden relative">
  <!-- Background decoration -->
  <div class="absolute inset-0 -z-10 bg-gray-light">
    <div class="absolute top-20 sm:top-40 right-10 sm:right-20 w-48 sm:w-96 h-48 sm:h-96 bg-blue-light/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-10 sm:bottom-20 left-10 sm:left-20 w-48 sm:w-96 h-48 sm:h-96 bg-teal/10 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 flex-1 flex items-center">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12 items-center w-full">
      <!-- Left Content -->
      <div class="space-y-6 sm:space-y-8 text-center lg:text-left" data-aos="fade-up" data-aos-duration="1000">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-blue-dark space-y-1 sm:space-y-2">
          <span class="block">Hey There,</span>
          <span class="block">I'm <span class="text-teal">Habdil</span></span>
        </h1>

        <p class="text-salmon hover:text-salmon/80 transition-colors text-sm sm:text-base">
          <a href="mailto:habdiliqrawardana@gmail.com" 
             class="group inline-flex items-center gap-2">
            habdiliqrawardana@gmail.com
            <svg xmlns="http://www.w3.org/2000/svg" 
                 class="w-3 h-3 sm:w-4 sm:h-4 transform group-hover:translate-x-1 transition-transform" 
                 fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M14 5l7 7m0 0l-7 7m7-7H3"/>
            </svg>
          </a>
        </p>

        <div class="flex items-center gap-3 sm:gap-4 text-blue-medium justify-center lg:justify-start" data-aos="fade-up" data-aos-delay="200">
          <div class="w-10 h-10 sm:w-12 sm:h-12 overflow-hidden">
            <img 
              src={students} 
              alt="Student Icon" 
              class="w-full h-full object-cover"
            />
          </div>
          <div>
            <p class="font-medium text-sm sm:text-base">Informatics</p>
            <p class="text-xs sm:text-sm">Students</p>
          </div>
        </div>
      </div>

      <!-- Right Content - Profile Image & Floating Icons -->
      <div class="relative mt-8 lg:mt-0 max-h-[50vh] lg:max-h-none" data-aos="fade-left" data-aos-duration="1000">
        <!-- Floating tech icons -->
        {techIcons.map((icon) => (
          <div class={`absolute w-8 h-8 sm:w-12 sm:h-12 ${icon.class} z-20`}>
            <img 
              src={icon.src} 
              alt={icon.alt}
              class="w-full h-full object-contain hover:scale-110 transition-transform cursor-pointer"
            />
          </div>
        ))}

        <!-- Main profile image -->
        <div class="relative z-10 px-4 sm:px-0">
          <img 
            src={profileImgUrl} 
            alt="Habdil Profile" 
            class="w-full max-w-[280px] sm:max-w-xl mx-auto filter drop-shadow-xl rounded-2xl"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Floating animations remain unchanged */
  @keyframes float-1 {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(-10px, -10px) rotate(5deg); }
  }
  @keyframes float-2 {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(10px, -5px) rotate(-5deg); }
  }
  @keyframes float-3 {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(-5px, 10px) rotate(3deg); }
  }
  @keyframes float-4 {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(8px, 8px) rotate(-3deg); }
  }
  @keyframes float-5 {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(-8px, 5px) rotate(5deg); }
  }

  .animate-float-1 { animation: float-1 6s ease-in-out infinite; }
  .animate-float-2 { animation: float-2 7s ease-in-out infinite; }
  .animate-float-3 { animation: float-3 8s ease-in-out infinite; }
  .animate-float-4 { animation: float-4 7s ease-in-out infinite; }
  .animate-float-5 { animation: float-5 6s ease-in-out infinite; }
</style>